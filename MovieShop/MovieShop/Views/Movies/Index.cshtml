    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div>
    <p>
        @Html.DropDownList("GenreList", (SelectList)ViewBag.GenreList, "All", new { onchange = "JavaScript:this.form.sumbit()" })
