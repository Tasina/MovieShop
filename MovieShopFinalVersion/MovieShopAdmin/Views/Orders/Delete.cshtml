@model MovieShopDAL.BE.Order

@{
    ViewBag.Title = "Delete Order";
}

<h2>Delete Order</h2>

<h3>Are you sure you want to delete this Order?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Customer:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.FirstName)
        </dd>

        <dt>
            Movie:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
        </div>
    }

    <div>
        <button class="btn btn-primary" style="margin-right:5px" onclick="window.location.href = '/Orders/Index'">Cancel</button>
    </div>
</div>
